<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="MBG.properties"/>

    <classPathEntry
            location="${jdbc.driverLocation}"/>

    <context id="MySqlTables" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="${jdbc.driverClass}"
                        connectionURL="${jdbc.url}"
                        userId="${jdbc.user}"
                        password="${jdbc.password}">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.rabbit.ssm.domain.model" targetProject="src/main/java">
            <!-- 是否允许子包，即targetPackage.schemaName.tableName -->
            <property name="enableSubPackages" value="true"/>
            <!-- 是否对model添加 构造函数 -->
            <property name="constructorBased" value="false"/>
            <!-- 是否对类CHAR类型的列的数据进行trim操作 -->
            <property name="trimStrings" value="true"/>
            <!-- 建立的Model对象是否不可改变  即生成的Model对象不会有 setter方法，只有构造方法 -->
            <property name="immutable" value="false"/>
        </javaModelGenerator>


        <table schema="mydb" tableName="lifepay_bill" domainObjectName="LifePayBillDO"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableCountByExample="false"
               enableSelectByExample="false">
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="bill_id" sqlStatement="MySql"/>
        </table>

        <table schema="mydb" tableName="lifepay_family" domainObjectName="LifePayFamilyDO"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableCountByExample="false"
               enableSelectByExample="false">
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="family_id" sqlStatement="MySql"/>
        </table>

        <table schema="mydb" tableName="lifepay_user" domainObjectName="LifePayUserDO"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableCountByExample="false"
               enableSelectByExample="false">
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="user_id" sqlStatement="MySql"/>
        </table>


        <table schema="mydb" tableName="lifepay_power_use_record" domainObjectName="LifePayPowerUseRecordDO"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableCountByExample="false"
               enableSelectByExample="false">
            <property name="useActualColumnNames" value="false"/>
            <generatedKey column="record_id" sqlStatement="MySql"/>
        </table>

    </context>
</generatorConfiguration>